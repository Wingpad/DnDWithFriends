extends layout

append head
  script(src='/jquery.form/jquery.form.js')
  script(src='/javascripts/app.js')

block content
  .btn-group(role='group')
    button.btn.btn-default(type='button', onclick='setDrawingMode(true)') Draw
    button.btn.btn-default(type='button', onclick='setDrawingMode(false)') Drag
    button.btn.btn-default(type='button', data-toggle='modal', data-target='#spriteModal') Sprite
  input#drawColor(type='color', value='#000000', style='float: right')
  canvas#mainCanvas(resize)
  
  #spriteModal.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4.modal-title Sprite Manager
        .modal-body(style="padding: 20px;")
          .row(style="margin-bottom: 5px;")
            form#uploadForm.form-inline(enctype='multipart/form-data', action='/uploadImage', method='post')
              .form-group
                input.btn.btn-default(type='file', name='image')
              input.btn.btn-primary(type='submit', value='Upload Image', name='submit')
            #message
          .row(style="margin-bottom: 5px;")
            button.btn.btn-default(type='button', style='width: 100%', onclick="socket.emit('ls')") Refresh
          .row
            table.table.table-hover
              thead
                tr
                  th Preview
                  th Name
                  th Select
              tbody#images
          .row
            .checkbox
              label
                input#background(type='checkbox')
                |  Set as background
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='button', onclick='insertSprite()') Insert Sprite
